<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map Fragment (Full screen) -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Search Bar Section (Overlaid on top of the map) -->
    <LinearLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_search_bar"><!-- Apply the rounded drawable -->

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search Icon" />

        <!-- Search Bar EditText (Where users can type the place name) -->
        <EditText
            android:id="@+id/place_search_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search"
            android:background="@android:color/transparent"
            android:textColor="#2C3E50"
            android:textColorHint="#2C3E50"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" />

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingStart="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter Icon"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>


    <!-- Custom Location Button enclosed in a square -->
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/square_background"
        android:alpha="0.75">

        <ImageView
            android:id="@+id/custom_location_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_location_foreground"
            android:contentDescription="My Location"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0.75" />
    </FrameLayout>

    <!-- Show Cameras Button (Centralized and brought down) -->
    <Button
        android:id="@+id/show_cameras_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Cameras"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/rounded_button" />

    <!-- Bottom Menu Section (Overlaid on top of the map) -->
    <LinearLayout
        android:id="@+id/menu_section"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/rounded_menu_background">

        <!-- Settings Button -->
        <LinearLayout
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/terrain_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_terrain_24"
                android:contentDescription="Settings Icon" />

            <TextView
                android:id="@+id/settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terrain"
                android:textColor="#2C3E50"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Upload Button -->
        <LinearLayout
            android:id="@+id/upload_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/upload_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="Upload Icon" />

            <TextView
                android:id="@+id/upload_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#2C3E50"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Help Button -->
        <LinearLayout
            android:id="@+id/help_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="Help Icon" />

            <TextView
                android:id="@+id/help_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminal"
                android:textColor="#2C3E50"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Account Button -->
        <LinearLayout
            android:id="@+id/account_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/account_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/account"
                android:contentDescription="User Account" />

            <TextView
                android:id="@+id/account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#2C3E50"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar in a CardView (initially hidden) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardElevation="8dp"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp" />

            <!-- Loading text -->
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="16sp"
                android:textColor="#333333" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
